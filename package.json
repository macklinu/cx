    "lefthook": "^2.1.1",
    "oxfmt": "^0.33.0",
    "oxlint": "^1.48.0",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=24"
  },
  "packageManager": "pnpm@10.29.3"
